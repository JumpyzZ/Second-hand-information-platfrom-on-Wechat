
<view class="weui-cells weui-cells_after-title">

  <view class="weui-cell">

    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <image src="{{userInfo.avatarUrl}}" style="width: 50px; height: 50px; display: block"/>
      <view class="weui-badge" style="position: absolute;top: -.4em;right: -.4em;"></view>
    </view>

    <view class="weui-cell__bd">
      <view>{{userInfo.nickName}}</view>
    </view>

  </view>

<navigator url="../myuploads/myuploads" class="weui-cell weui-cell_access">

  <view class="weui-cell__bd">
    <view style="display: inline-block; vertical-align: middle">我的发布</view>
    <view class="weui-badge" style="margin-left: 5px;"></view>
  </view>

  <view class="weui-cell__ft weui-cell__ft_in-access"></view>

</navigator>

</view>




